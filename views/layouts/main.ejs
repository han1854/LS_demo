<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= description || 'Nền tảng học lập trình trực tuyến hiện đại dành cho mọi người.' %>">
    <meta name="keywords" content="<%= keywords || 'học lập trình, khóa học online, e-learning, web development, javascript, python' %>">
    <meta name="author" content="LearnSpace Team">

    <title><%= title ? (title + ' | LearnSpace') : 'LearnSpace - Học Trực Tuyến' %></title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/static/images/favicon.png">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <!-- Core Styles -->
    <link rel="stylesheet" href="/public/css/new-styles.css">
    <link rel="stylesheet" href="/public/css/utilities.css">
    <link rel="stylesheet" href="/public/css/nav.css">
    <link rel="stylesheet" href="/public/css/courses.css">

    <!-- Page-specific Styles -->
    <% if (pageStyles && pageStyles.length > 0) { %>
        <% pageStyles.forEach(function(style) { %>
            <link rel="stylesheet" href="/static/css/<%= style %>.css">
        <% }); %>
    <% } %>

    <!-- Inline Styles (Progress bar & Notification) -->
    <style>
        .progress-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: #e0e0e0;
            z-index: 1050;
        }

        .progress-bar {
            height: 100%;
            background: linear-gradient(90deg, #2563eb, #3b82f6);
            border-radius: 2px;
            transition: width 0.4s ease;
            width: 0%;
        }

        /* Các class width động */
        .progress-0 { width: 0%; }
        .progress-10 { width: 10%; }
        .progress-25 { width: 25%; }
        .progress-50 { width: 50%; }
        .progress-75 { width: 75%; }
        .progress-90 { width: 90%; }
        .progress-100 { width: 100%; }

        #notification-container {
            position: fixed;
            top: 1rem;
            right: 1rem;
            z-index: 1080;
        }
    </style>
</head>

<body>
    <!-- Navigation -->
    <%- include('../partials/nav') %>
    
    <!-- Top Header (for notifications) -->
    <%- include('../partials/header') %>

    <!-- Main Content -->
    <main class="<%= mainClass || 'container mt-4' %>">
        <%- body %>
    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <!-- Notification Container -->
    <div id="notification-container"></div>

    <!-- Progress Bar (class động, tránh lỗi inline EJS) -->
    <% if (currentPath && currentPath.startsWith('/course/') && typeof progressPercentage !== 'undefined') { %>
        <% let progressClass = 'progress-' + Math.min(100, Math.round(progressPercentage / 5) * 5); %>
        <div class="progress-container">
            <div class="progress-bar <%= progressClass %>"></div>
        </div>
    <% } %>

    <!-- Core Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/js/main.js"></script>

    <!-- Page-specific Scripts -->
    <% if (pageScripts && pageScripts.length > 0) { %>
        <% pageScripts.forEach(function(script) { %>
            <script src="/static/js/<%= script %>.js"></script>
        <% }); %>
    <% } %>
</body>
</html>
